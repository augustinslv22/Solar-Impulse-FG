<?xml version="1.0"?>
<PropertyList>
  <params>
    <power-source>/controls/lighting/landing-lights</power-source>
    <name>SolarSpot</name>
    <r>0.9</r>
    <g>0.9</g>
    <b>0.7</b>  <!-- Blanc chaud -->
  </params>

  <light>
    <type>spot</type>
    <direction>
      <pitch-deg>-15</pitch-deg>  <!-- Orienté vers le bas -->
    </direction>
    <attenuation>
      <c>1.0</c>
      <l>0.2</l>
      <q>0.1</q>
    </attenuation>
    <spot-exponent>2</spot-exponent>
    <spot-cutoff>30</spot-cutoff>
    <range-m>100</range-m>
    <power-w>20</power-w>  <!-- LED haute efficacité -->
  </light>
</PropertyList>