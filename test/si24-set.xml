<?xml version="1.0"?>
<PropertyList>
    <sim>
        <description>Solar Impulse</description>
        <author>Your Name</author>
        
        <!-- Utilisation de JSBSim pour la dynamique de vol -->
        <flight-model>null</flight-model>

        <!-- Définir le modèle -->
        <model>
            <path>Aircraft/test/Models/solar-impulse.xml</path> <!-- Référence au modèle principal -->
        </model>

        <!-- Configuration de performance (laisser les valeurs par défaut) -->
        <performance>
            <cruise>
                <airspeed-knots type="int">45</airspeed-knots>
                <altitude-ft type="int">28000</altitude-ft>
            </cruise>
            <approach>
                <airspeed-knots type="int">35</airspeed-knots>
            </approach>
        </performance>
    </sim>
</PropertyList>
